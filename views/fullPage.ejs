<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit Page</title>
    <link rel="stylesheet" href="./public/styles.css">
</head>
<body>
<%- include ('./components/header')%>

<section>
    <div class="container">
        <div class="main_wrapper">
            <div class="">
                <div class="h3"><%= post.title%></div>
                <div class=""><p><%= post.desc%></p></div>
            </div>
            <% if(post.owner._id.toString() === userId.toString()) { %>
            <div>

                <a href="/edit_page/<%=post._id%>"><button class="btn btn-light">Edit</button></a>

                <form action="/delete/<%=post._id%>">
                    <button class="btn btn-light">Delete</button>
                </form>

            </div>
            <% } %>
            <form action="/addComment/<%= userId%>" method="post">
                <input type="hidden" value="<%= post._id%>" name="postId">
                <textarea name="comment" id="" cols="30" rows="10" placeholder="Comment"></textarea>
                <button>Add comment</button>
            </form>
            <%for(let i = 0; i<comments.length; i++){%>
            <div class="comment">
                <p><%=comments[i].comment%></p>
                <p>Added by: <%= comments[i].owner.userName%></p>
            </div>
            <% if(comments[i].owner._id.toString() === userId.toString()) { %>
            <div>



                <form action="/deleteComment/<%=comments[i]._id%>" method="post">
                    <input type="hidden" name="postId" value="<%= post._id %>">
                    <button class="edit_btn">Delete</button>
                </form>


            </div>
            <% } %>
            <%}%>



        </div>
    </div>
</section>


</div>
</body>
</html>