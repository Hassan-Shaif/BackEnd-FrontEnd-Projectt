<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="./public/styles.css">
</head>
<body>
<%- include ('./components/header')%>
<section class="section_content">

    <div class="container">
        <div class="main_wrapper_start">
            <div class="main_title">
                <h3>Matrix Master Community</h3>
            </div>
            <div>
                <a class="question_btn" href="/questionPage">Add Question</a>
            </div>

            <div class="allPosts">
                <% for (let i = 0; i<posts.length;i++) {%>
                <h3><%= posts[i].title %></h3>
                <p><%= posts[i].desc %></p>
                <p>added by : <%= posts[i].owner.userName%> </p>

                    <% if(posts[i].owner._id.toString() === userId.toString()) { %>
                    <div>

                        <a href="/edit_page/<%=posts[i]._id%>"><button class="btn btn-light">Edit</button></a>

                        <form action="/delete/<%=posts[i]._id%>">
                            <button class="btn btn-light">Delete</button>
                        </form>
                    </div>
                    <% } %>

                <%}%>




            </div>
        </div>

    </div>
</section>


</body>
</html>